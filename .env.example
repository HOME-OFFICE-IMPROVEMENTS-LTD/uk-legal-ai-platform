# Environment Configuration Template
# Copy this file to .env.local and fill in your actual values

# API Configuration
FASTAPI_BASE_URL=https://your-api-domain.com
LEGAL_API_BASE=https://your-api-domain.com/api/legal

# Payment Configuration
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_key_here
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_here
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here

# Security Configuration
NEXT_PUBLIC_APP_ENV=production
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Database (if applicable)
DATABASE_URL=your_database_connection_string

# OnionShare/Tor Configuration (for enterprise features)
ONIONSHARE_API_KEY=your_onionshare_api_key
TOR_PROXY_URL=socks5://127.0.0.1:9050